{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*",
    "./jest.config.ts",
    "__tests__/**/*",
    "types",
    "tsup.config.ts",
    "jest",
    "@testing-library/jest-dom",
    "./tailwind.config.js"
  ],
  "exclude": ["node_modules", "dist"]
}
